@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/MasterPage.cshtml";
}
<link href="~/Content/Styles/Login.css" rel="stylesheet" />
<div class="base">
    <div class="header">
        <h1 class="sign">Sign in</h1>
    </div>
    <hr />
    <form method="post" action="/Login">
        <ul>
            @Html.AntiForgeryToken()
            <li class="item">
                <label class="lable" for="Username">Username</label><br>
                <input class="text" autocomplete="username" type="text" id="Username" name="UserName"/>
            </li>
            <li class="item">
                <label class="lable" for="Password">Password</label><br>
                <input class="text" autocomplete="current-password" type="password" id="Password" name="Password"/>
            </li>
            <li class="item cButton">
                <button class="button" type="submit" value="Proceed">Login</button>
            </li>
            <li class="item">
                <a href="/Register"><h4>If don't have an account, Register Now</h4></a>
            </li>
        </ul>
    </form>
    <p id="ResultLogin" />
</div>
